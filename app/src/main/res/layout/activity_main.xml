<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--  top images layout -->
    <LinearLayout style="@style/bannerLayout">

        <ImageView
            style="@style/topImageBanner"
            android:src="@drawable/dija" />

        <ImageView
            style="@style/topImageBanner"
            android:src="@drawable/davido" />

        <ImageView
            style="@style/topImageBanner"
            android:src="@drawable/simi" />

        <ImageView
            style="@style/topImageBanner"
            android:src="@drawable/reekadobanks" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout style="@style/boxesOuterLayout">

            <!--user details-->
            <LinearLayout style="@style/boxesOuterLayout">

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Your Name"/>

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Email Address"/>

                <View style="@style/Divider" />

                <!-- Layout for Instuctions -->
                <TextView
                    android:id="@+id/intro_text"
                    style="@style/introText" />

                <View style="@style/Divider" />
            </LinearLayout>

            <!--questions-->
            <LinearLayout style="@style/boxesOuterLayout">


                <!-- Linear Layout for Question 1 -->
                <LinearLayout style="@style/boxesLayout">

                    <TextView
                        style="@style/questionHeaderLayout"
                        android:text="Question 1:" />

                    <TextView
                        style="@style/questionLayout"
                        android:text="Who sang this song?" />

                    <!--Music Buttons -->
                    <LinearLayout style="@style/musicButtonLayout">

                        <!--Stop Button -->
                        <ImageView
                            style="@style/musicButton"
                            android:id="@+id/question_one_stop_button"
                            android:onClick="stopButton"
                            android:src="@drawable/ic_stop_black_24dp" />

                        <!--Now Playing Status -->
                        <TextView
                            style="@style/PlayStopText"
                            android:id="@+id/question_one_play_status"
                            android:text="play/stop" />

                        <!--Play Button -->
                        <ImageView
                            style="@style/musicButton"
                            android:id="@+id/question_one_play_button"
                            android:onClick="playButton"
                            android:src="@drawable/ic_play_arrow_black_24dp" />


                    </LinearLayout>

                    <!-- Answer Section of Question 1 -->
                    <TextView
                        style="@style/questionLayout"
                        android:text="Answer:" />


                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/beautiful_nubia_1"
                            style="@style/Radiobutton"
                            android:onClick="submitQuestion1Answer"
                            android:text="Beautiful Nubia ; Segun Akinlolu" />

                        <RadioButton
                            android:id="@+id/beautiful_nubia_2"
                            style="@style/Radiobutton"
                            android:onClick="submitQuestion1Answer"
                            android:text="Beautiful Nobia ; Segun Adelolu" />

                        <RadioButton
                            android:id="@+id/beautiful_nubia_3"
                            style="@style/Radiobutton"
                            android:onClick="submitQuestion1Answer"
                            android:text="Beautiful Nubia ; Segun Adelolu" />

                        <RadioButton
                            android:id="@+id/beautiful_nubia_4"
                            style="@style/Radiobutton"
                            android:onClick="submitQuestion1Answer"
                            android:text="Beautiful Nobia ; Segun Akinlolu" />

                    </RadioGroup>

                    <View style="@style/Divider" />

                    <!-- End of Question 1 -->

                </LinearLayout>

                <!-- Linear Layout for Question 2 -->
                <LinearLayout style="@style/boxesLayout">

                    <TextView
                        style="@style/questionHeaderLayout"
                        android:text="Question 2:" />

                    <TextView
                        style="@style/questionLayout"
                        android:text="What is this singers name?" />

                    <!--Music Buttons -->
                    <LinearLayout style="@style/musicButtonLayout">

                        <!--Stop Button -->
                        <ImageView
                            style="@style/musicButton"
                            android:id="@+id/question_two_stop_button"
                            android:onClick="stopButton"
                            android:src="@drawable/ic_stop_black_24dp" />

                        <!--Now Playing Status -->
                        <TextView
                            style="@style/PlayStopText"
                            android:id="@+id/question_two_play_status"
                            android:text="play/stop" />

                        <!--Play Button -->
                        <ImageView
                            style="@style/musicButton"
                            android:id="@+id/question_two_play_button"
                            android:onClick="playButton"
                            android:src="@drawable/ic_play_arrow_black_24dp" />


                    </LinearLayout>

                    <!-- Answer Section of Question 2 -->
                    <TextView
                        style="@style/questionLayout"
                        android:text="Answer:" />


                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/sound_sultan_1"
                            style="@style/Radiobutton"
                            android:onClick="submitQuestion2Answer"
                            android:text="Davido" />

                        <RadioButton
                            android:id="@+id/sound_sultan_2"
                            style="@style/Radiobutton"
                            android:onClick="submitQuestion2Answer"
                            android:text="Dbanj" />

                        <RadioButton
                            android:id="@+id/sound_sultan_3"
                            style="@style/Radiobutton"
                            android:onClick="submitQuestion2Answer"
                            android:text="Sound Sultan" />

                        <RadioButton
                            android:id="@+id/sound_sultan_4"
                            style="@style/Radiobutton"
                            android:onClick="submitQuestion2Answer"
                            android:text="Reekadobanks" />

                    </RadioGroup>

                    <View style="@style/Divider" />

                    <!-- End of Question 2 -->

                </LinearLayout>

                <!-- Linear Layout for Question 3 -->
                <LinearLayout style="@style/boxesLayout">

                    <TextView
                        style="@style/questionHeaderLayout"
                        android:text="Question 3:" />

                    <TextView
                        style="@style/questionLayout"
                        android:text="Where does this artist hail from?" />

                    <!--Music Buttons -->
                    <LinearLayout style="@style/musicButtonLayout">

                        <!--Stop Button -->
                        <ImageView
                            style="@style/musicButton"
                            android:id="@+id/question_three_stop_button"
                            android:onClick="stopButton"
                            android:src="@drawable/ic_stop_black_24dp" />

                        <!--Now Playing Status -->
                        <TextView
                            style="@style/PlayStopText"
                            android:id="@+id/question_three_play_status"
                            android:text="play/stop" />

                        <!--Play Button -->
                        <ImageView
                            style="@style/musicButton"
                            android:id="@+id/question_three_play_button"
                            android:onClick="playButton"
                            android:src="@drawable/ic_play_arrow_black_24dp" />


                    </LinearLayout>

                    <!-- Answer Section of Question 3 -->
                    <TextView
                        style="@style/questionLayout"
                        android:text="Answer:" />


                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/music3Option1"
                            style="@style/Radiobutton"
                            android:onClick="submitQuestion3Answer"
                            android:text="Ajegunle" />

                        <RadioButton
                            android:id="@+id/music3Option2"
                            style="@style/Radiobutton"
                            android:onClick="submitQuestion3Answer"
                            android:text="Mushin" />

                        <RadioButton
                            android:id="@+id/music3Option3"
                            style="@style/Radiobutton"
                            android:onClick="submitQuestion3Answer"
                            android:text="Lekki" />

                        <RadioButton
                            android:id="@+id/music3Option4"
                            style="@style/Radiobutton"
                            android:onClick="submitQuestion3Answer"
                            android:text="Ojuelegba" />

                    </RadioGroup>

                    <View style="@style/Divider" />

                    <!-- End of Question 3 -->

                </LinearLayout>

                <!-- Linear layout for Question 4 -->
                <LinearLayout style="@style/boxesLayout">

                    <TextView
                        style="@style/questionHeaderLayout"
                        android:text="Question 4:" />

                    <TextView
                        style="@style/questionLayout"
                        android:text="What was the artist in Question3's first breakout single?" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:text="Answer:"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Answer Section of Question 4 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/question_four_answer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                    </LinearLayout>


                    <View style="@style/Divider" />


                </LinearLayout>
                <!-- End of Question 4 -->

                <!-- Question 5 -->
                <LinearLayout style="@style/boxesLayout">

                    <TextView
                        style="@style/questionHeaderLayout"
                        android:text="Which of these Pair are Siblings" />

                    <TextView
                        style="@style/questionLayout"
                        android:text="Choose the set of correct Options?" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:text="Answer:"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Answer Section of Question 5 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <CheckBox
                            android:id="@+id/music5Option1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="16dp"
                            android:text="M.I Abaga and Jesse Jagz" />

                        <CheckBox
                            android:id="@+id/music5Option2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="16dp"
                            android:text="D banj and K switch" />


                        <CheckBox
                            android:id="@+id/music5Option3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="16dp"
                            android:text="Don Jazzy and D' Prince" />

                        <CheckBox
                            android:id="@+id/music5Option4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="16dp"
                            android:text="Kiss Daniel and Simi" />


                    </LinearLayout>

                    <View style="@style/Divider" />


                </LinearLayout>
                <!-- End of Question 5 -->

                <!-- Linear Layout for Question 6 -->
                <LinearLayout style="@style/boxesLayout">

                    <TextView
                        style="@style/questionHeaderLayout"
                        android:text="Question 6:" />

                    <TextView
                        style="@style/questionLayout"
                        android:text="Who Sang this song?" />

                    <!--Music Buttons -->
                    <LinearLayout style="@style/musicButtonLayout">

                        <!--Stop Button -->
                        <ImageView
                            style="@style/musicButton"
                            android:id="@+id/question_six_stop_button"
                            android:onClick="stopButton"
                            android:src="@drawable/ic_stop_black_24dp" />

                        <!--Now Playing Status -->
                        <TextView
                            style="@style/PlayStopText"
                            android:id="@+id/question_six_play_status"
                            android:text="play/stop" />

                        <!--Play Button -->
                        <ImageView
                            style="@style/musicButton"
                            android:id="@+id/question_six_play_button"
                            android:onClick="playButton"
                            android:src="@drawable/ic_play_arrow_black_24dp" />


                    </LinearLayout>


                    <!-- Answer Section of Question 6 -->
                    <TextView
                        style="@style/questionLayout"
                        android:text="Answer:" />


                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/music6Option1"
                            style="@style/Radiobutton"
                            android:onClick="submitQuestion6Answer"
                            android:text="Davido" />

                        <RadioButton
                            android:id="@+id/music6Option2"
                            style="@style/Radiobutton"
                            android:onClick="submitQuestion6Answer"
                            android:text="Dbanj" />

                        <RadioButton
                            android:id="@+id/music6Option3"
                            style="@style/Radiobutton"
                            android:onClick="submitQuestion6Answer"
                            android:text="Falz" />

                        <RadioButton
                            android:id="@+id/music6Option4"
                            style="@style/Radiobutton"
                            android:onClick="submitQuestion6Answer"
                            android:text="Mayorkun" />

                    </RadioGroup>

                    <View style="@style/Divider" />

                    <!-- End of Question 6 -->

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!-- Submit Answers -->
                <Button
                    android:id="@+id/submit_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:onClick="submitAllAnswers"
                    android:text="Submit Answers"
                    android:textColor="#EBF2FA" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>
