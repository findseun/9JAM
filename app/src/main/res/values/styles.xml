<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for divider. -->
    <style name="Divider">
        <!-- Custom Text. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">36dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">#e6e6e6</item>
    </style>

    <!-- Style for introText. -->
    <style name="introText">
        <!-- Custom Text. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#064789</item>
    </style>

    <!-- Style for topImageBanner. -->
    <style name="topImageBanner">
        <!-- Custom Text. -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100sp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_weight">1</item>
    </style>


    <!-- Style for resultBanner. -->
    <style name="resultBanner">
        <!-- Custom Text. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">#EBF2FA</item>
    </style>

    <!-- Style for bannerLayout. -->
    <style name="bannerLayout">
        <!-- Custom Text. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#A5BE00</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Style for boxesOuterLayout. -->
    <style name="boxesOuterLayout">
        <!-- Custom Text. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#EBF2FA</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <!-- Style for boxesLayout. -->
    <style name="boxesLayout">
        <!-- Custom Text. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Style for questionHeaderLayout. -->
    <style name="questionHeaderLayout">
        <!-- Custom Text. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#064789</item>
    </style>

    <!-- Style for questionLayout. -->
    <style name="questionLayout">
        <!-- Custom Text. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for Radiobutton. -->
    <style name="Radiobutton">
        <!-- Custom Text. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <!-- Style for musicButtonLayout. -->
    <style name="musicButtonLayout">
        <!-- Custom Text. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <!-- Style for musicButton. -->
    <style name="musicButton">
        <!-- Custom Text. -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerInside</item>
    </style>


    <!-- Style for Play/Stop text. -->
    <style name="PlayStopText">
        <!-- Custom Text. -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
